{% extends 'base.html.twig' %}
{% block body %}

<div class="jumbotron">
    <div class="row">
    <div class="col-md-8">

</div>
<div class="col-md-4">
<h1>{{property.title}}</h1>
<h2>{{property.rooms}} piéces - {{property.surface}} m²</h2>
<div class="text-primary" style="font-size :4rem; font-weight:bold;">
{{property.formatedPrice}} Dhs
</div>
<a href="#" class="btn btn-primary">Contactez l'agence</a>
</div>

</div>

</div>
<div class="container mt-4">

<p>{{property.description | nl2br}}</p>
<div class="row">
<div class="col-md-8">
<h2>Caractéristique</h2>
<table class="table table-striped">
<tr>
    <td>Surface habitable </td>
    <td>{{property.surface}}  m²</td>
</tr>
<tr>
    <td>Piéces </td>
    <td>{{property.rooms}} piéces </td>
</tr>
<tr>
    <td>Chambres </td>
    <td>{{property.bedrooms}} piéces </td>
</tr>
<tr>
    <td>Etage </td>
    <td>{{property.floor}} etage </td>
</tr>
<tr>
    <td>Chauffage </td>
    <td>{{property.heatType}} piéces </td>
</tr>
</table>
</div>

<div class="col-md-4">
<h2>Spécificités </h2>
</div>
</div>
</div>
{% endblock %}